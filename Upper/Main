import java.util.Scanner;

public class UpperMain {
    public static void main(String[] args) {
        int lettersCAPS = 0;
        Scanner upperInput = new Scanner(System.in);
        String phrase = upperInput.next();
        String UPPER = phrase.toUpperCase();

        //System.out.println(length);
        for (int i = 0; i < phrase.length(); i++) {
            if (phrase.charAt(i) != UPPER.charAt(i)) {
                lettersCAPS++;
            }
        }
        System.out.println(lettersCAPS);
    }
}
